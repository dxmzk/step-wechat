.order {
  background-color: #f5f5f5;
}
.list {
  margin-top: 80rpx;
}
.right-ic {
  width: 32rpx;
  height: 32rpx;
  margin-left: 2rpx;
}
.item {
  padding: 22rpx 32rpx;
  margin-top: 16rpx;
  position: relative;
  background-color: white;
}
.shop-logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.shop-name {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #323232;
  font-weight: 500;
  line-height: 44rpx;
}
.order-status {
  font-size: 28rpx;
  color: #fe7100;
  text-align: end;
}
.goods-img-box {
  height: 160rpx;
  margin-top: 22rpx;
  position: relative;
}
.img-layout {
  max-width: 530rpx;
  /* padding-right: 160rpx; */
  overflow: scroll;
}
.goods-info {
  margin-top: 22rpx;
  padding-right: 172rpx;
  position: relative;
  align-items: flex-start;
}
.goods-num-box {
  min-width: 150rpx;
  min-height: 160rpx;

  z-index: 1;
  top: 0;
  right: 0;
  position: absolute;
  background-color: white;

  color: #666666;
  font-size: 24rpx;
  line-height: 160rpx;
  text-align: right;
}
.goods-img {
  width: 160rpx;
  height: 160rpx;
  min-width: 160rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  background-color: #dedede;
}

.goods-name {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
  line-height: 40rpx;
  max-height: 80rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-type {
  font-size: 24rpx;
  color: #979797;
  line-height: 34rpx;
}
.goods-tag {
  font-size: 22rpx;
  color: #FE7100;
  line-height: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background: rgba(255,255,255,0.00);
  border: 0.5rpx solid rgba(254,212,178,1);
  border-radius: 4rpx;
}
.price-num {
  top: 0;
  right: 0;
  z-index: 1;
  position: absolute;

  text-align: right;
  font-size: 22rpx;
  color: #333333;
}
.goods-price {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  text-align: right;
  font-weight: 500;
}
.goods-num {
  font-size: 22rpx;
  color: #979797;
  line-height: 36rpx;
}
.item-footer {
  margin-top: 22rpx;
}
.action-more {
  color: #979797;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
}
.action-btn {
  color: #323232;
  font-size: 28rpx;
  padding: 8rpx 12rpx;
  margin-left: 16rpx;
  border-radius: 8rpx;
  border: solid 1rpx #dedede;
}
.action-btn2 {
  color: #FE7100;
  border: solid 1rpx #FFB880;
}
.action-btn3 {
  color: white;
  background-color: #FE7100;
}

.pop-view {
  left: 32rpx;
  bottom: -80rpx;
  width: 270rpx;
  z-index: 1;
  position: absolute;
  border-radius: 12rpx;
  box-shadow: inset 1rpx 0rpx 6rpx 0rpx rgba(0,0,0,0.1);
  background-color: white;
}
.pop-item {
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 32rpx;

}

.empty-box {
  width: 100%;
  margin-top: 180rpx;
  align-items: center;
}
.empty-img {
  width: 400rpx;
  height: 400rpx;
  background-color: antiquewhite;
}
.empty-str {
  color: #979797;
  font-size: 32rpx;
  margin: 24rpx 0;
}
.empty-home {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ffffff;
  border: 1rpx solid rgba(255, 184, 128, 1);
  border-radius: 8rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #fe7100;
}