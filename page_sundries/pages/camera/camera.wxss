.camera {
  position: relative;
}
.photo {
  width: 100%;
  height: 800rpx;
}

.mark {
  left: 32rpx;
  bottom: 156px;
  width: 560rpx;
  height: 220rpx;
  padding: 32rpx;
  position: absolute;
  border-radius: 2px;
  background-color: rgba(247, 245, 242, 0.6);

  color: #232323;
}
.date {
  font-size: 56rpx;
  font-weight: 500;
  line-height: 100rpx;
}

.address {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 56rpx;
}
.name {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 56rpx;
}

.actions {
  width: 100%;
  justify-content: space-evenly;
  background-color: white;
}

.take {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: white;
  border: solid 4px #acacac;
}
.light {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #efefef;
}

.canvas-box {
  background-color: white;
}
