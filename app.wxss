/**  全局样式  **/
@import "/common/view.wxss";
@import "/common/text.wxss";
@import "/common/image.wxss";

Page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f6f6f6;
  font-size: 28rpx;
  font-weight: 400;
  /* font-family: PingFangSC-Medium; */
  font-family: PingFangSC-Regular;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
}

.grid {
  display: grid;
}
.line {
  height: 1px;
  background-color: #efefef;
}
.row {
  display: flex;
  flex-direction: row;
}
.column {
  display: flex;
  flex-direction: column;
}

.ai-center {
  align-items: center;
}
.jc-center {
  justify-content: center;
}

.center {
  align-items: center;
  justify-content: center;
}
.flex {
  flex: 1;
}
.baseline {
  align-items: baseline;
}
.opacity {
  opacity: 0.6;
}

.footer-height {
  height: 114rpx;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}
/* 兼容IOS底部拦 */
.bang {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 实心按钮 */
.btn-hover {
  top: 2rpx;
  opacity: 0.96;
  position: relative;
  background-color: #f8f8f8;
}
.hover {
  opacity: 0.94;
  transform: scale(0.96, 0.96);
  background-color: rgba(0, 0, 0, 0.1);
  /* box-shadow: 0px 0px 16rpx #CCC inset; */
}
/* 镂空按钮 */
.plain-hover {
  position: relative;
  top: 2rpx;
  box-shadow: 0px 0px 16rpx #ccc inset;
}
/* 按钮去边框 */
.button::after {
  border: 0;
}
