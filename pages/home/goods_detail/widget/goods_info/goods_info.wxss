/* components/goods_detail/goods_info/goods_info.wxss */
.v-goods-info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Regular;
  background-color: rgba(0, 0, 0, 0.2);
}

.v-goods-info .v-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.v-goods-info .v-column {
  display: flex;
  flex-direction: column;
}
.v-goods-info .v-flex {
  flex: 1;
}
.v-goods-info .v-line {
  border-bottom: solid #f3f3f3 1px;
}
.v-goods-info .v-content {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background-color: white;
  max-height: 70%;
  min-height: 60%;
  overflow: scroll;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
  transform: translate(0, 99%);
}
.v-goods-info .v-title {
  text-align: center;
  color: #232323;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 92rpx;
  margin-left: 64rpx;
  font-family: PingFangSC-Medium;
}
.v-goods-info .v-close {
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}
.v-goods-info .v-list {
  flex: 1;
  padding: 32rpx 32rpx 48rpx 32rpx;
  overflow: scroll;
}
.v-goods-info .v-item {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #767676;
  align-items: flex-start;
}
.v-goods-info .v-label {
  min-width: 200rpx;
}
.v-goods-info .v-value {
  font-size: 28rpx;
  color: #232323;
}
.v-goods-info .v-ok {
  height: 88rpx;
  margin: 24rpx 32rpx;
  border-radius: 12rpx;
  text-align: center;
  line-height: 88rpx;
  background-color: #fe7100;

  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 500;
}
