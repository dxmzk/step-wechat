.pay {
  flex: 1;
  margin-bottom: 104rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
    
}
.right-box {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 56rpx;
  right: 30rpx;
  z-index: 1;
}
.item-box {
  padding-left: 32rpx;
  margin-top: 16rpx;
  background-color: white;
}
.address-not-use {
  height: 64rpx;
  padding: 0 32rpx;
  background-color: #FFEDEB;
}
.not-use-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.str-not-use {
  font-size: 24rpx;
  color: #FF4B33;
}
.address {
  padding-right: 32rpx;
  height: 144rpx;
  position: relative;
}

.address-title {
  font-family: PingFangSC-Medium;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #323232;
}
.str-label {
  margin-top: 8rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #666666;
}

.send-date {
  height: 128rpx;
  border-top: solid 1px #f5f5f5;
}
.date-urgent {
  width: 60rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: #FEF0E5;
  border-radius: 4px;
  margin-right: 8rpx;

  text-align: center;
  font-size: 22rpx;
  color: #F56105;
}
.date-value {
  margin-top: 4rpx;
  font-size: 28rpx;
}
.line-ic {
  width: 100%;
  height: 6rpx;
}
.item {
  height: 96rpx;
  margin-right: 32rpx;
  align-items: center;

  font-size: 28rpx;
  color: #323232;
}
.input-memo {
  margin-left: 64rpx;
  justify-content: flex-end;
}
.input-memo {
  color: #323232;
}

.logistics-num {
  color: #979797;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: right;
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}

.bad-goods-label {
  height: 64rpx;
  font-size: 24rpx;
  color: #323232;
  margin: 0 32rpx;
  align-items: center;
  border-bottom: solid 1px #ededed;
}
.goods-item {
  height: 208rpx;
  border-bottom: solid 1px #ededed;
}

.str-16 {
  font-size: 32rpx;
}
.str-org {
  color: #fe7100;
}
.str-money {
  font-family: PingFangSC-Medium;
  line-height: 44rpx;
  font-size: 36rpx;
  font-weight: 500;
}
.str-med {
  font-family: PingFangSC-Medium;
  font-weight: 500;
}
.str-tag {
  width: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 22rpx;
  color: #ffffff;
  margin-right: 16rpx;
  border-radius: 4rpx;
  background-color: #fe7100;
}

.footer-box {
  position: fixed;
  width: 100%;
  height: 104rpx;
  bottom: 0;
  left: 0;
  z-index: 2;
  align-items: center;
  background-color: white;
  border-top: solid 1px #EDEDED;
}
.total-cost {
  margin-left: 32rpx;

  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #F56105;
  font-weight: 500;
}
.total-amount {
  color: #979797;
  font-size: 24rpx;
  margin-left: 16rpx;
  text-decoration: line-through;
}
.pay-btn {
  width: 220rpx;
  height: 80rpx;
  margin-right: 32rpx;
  background: #fe7100;
  border-radius: 8rpx;

  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: white;
}
