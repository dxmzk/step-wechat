.v-input-count {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-family: PingFangSC-Regular;
  background-color: rgba(0, 0, 0, 0.65);
}


.v-input-count .v-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.v-input-count .v-column {
  display: flex;
  flex-direction: column;
}
.v-input-count .v-mark {
  height: 28vh;
}

.v-input-count .v-flex {
  flex: 1;
}

.v-input-count .v-content {
  border-radius: 24rpx;
  background-color: white;
  margin: 0 96rpx;
  padding: 48rpx 48rpx 0 48rpx;
  position: relative;

  animation-name: example;
  animation-duration: 0.7s;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
}

@keyframes example {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.v-input-count .v-title3 {
  color: #232323;
  font-size: 36rpx;
  font-weight: 500;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.v-input-count .v-input3 {
  color: #232323;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 8rpx;
  background-color: white;
  border-bottom: solid 1rpx #e6e6e6;
}
.v-input-count .v-actions {
  padding-bottom: 8rpx;
}
.v-input-count .v-btn {
  flex: 1;
  color: #323232;
  font-size: 32rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.v-input-count .v-btn2 {
  color: #fe7100;
}
.v-input-count .v-line {
  width: 1rpx;
  height: 80rpx;
  background-color: #e6e6e6;
}