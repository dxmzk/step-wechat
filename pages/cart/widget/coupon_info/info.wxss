.v-coupon-info {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  /* height: 100%; */
  z-index: 97;
  font-family: PingFangSC-Regular;
  background-color: rgba(0, 0, 0, 0.6);
}

.v-coupon-info .v-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.v-column {
  display: flex;
  flex-direction: column;
}
.v-coupon-info .v-flex {
  flex: 1;
}
.v-coupon-info .v-line {
  border-bottom: solid #f3f3f3 1px;
}
.v-coupon-info .v-content {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background-color: white;
  max-height: 60%;
  min-height: 60%;
  overflow: scroll;
  transform: translate(0, 99%);
}
.v-coupon-info .v-title {
  text-align: center;
  color: #232323;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 92rpx;
  margin-left: 64rpx;
  font-family: PingFangSC-Medium;
}
.v-coupon-info .v-close {
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}
.v-coupon-info .v-list {
  flex: 1;
  padding: 0 32rpx 48rpx 32rpx;
  display: flex;
  flex-direction: column;
}
.v-coupon-info .v-item {
  margin: 28rpx 0;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #767676;
}
.v-coupon-info .v-label {
  min-width: 200rpx;
}
.v-coupon-info .v-value {
  flex: 1;
  font-size: 28rpx;
  color: #232323;
  text-align: end;

  font-family: PingFangSC-Medium;
  font-size: 32rpx;
}
.v-coupon-info .v-unit {
  font-size: 22rpx;
  padding-right: 8rpx;
}
.v-coupon-info .v-org {
  color: #F56105;
}
.v-coupon-info .v-up-ic {
  width: 28rpx;
  height: 28rpx;
  rotate: 180deg;
  /* margin-top: 0; */
}


.v-coupon-info .v-footer {
  width: 100%;
  height: 100rpx;
  align-items: center;
  background-color: white;
  border-top: solid 1px #e3e3e3;
}
.v-coupon-info .v-cost-box {
  margin: 0 32rpx;
  align-items: flex-end;
}
.v-coupon-info .v-cost-line {
  font-size: 22rpx;
  color: #f56105;
  line-height: 34rpx;
  /* text-decoration: line-through; */
}
.v-coupon-info .v-total-cost {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #f56105;
  font-weight: 500;
  line-height: 40rpx;
  display: flex;
  align-items: baseline;
}
.v-coupon-info .v-cost-old {
}
.v-coupon-info .v-coupon-info {
  margin-left: 16rpx;
}
.v-coupon-info .v-go-pay {
  width: 180rpx;
  height: 80rpx;
  margin-right: 32rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  background-color: #fe7100;

  color: white;
  font-size: 32rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium;
}
