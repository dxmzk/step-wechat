.v-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  font-family: PingFangSC-Regular;
  background-color: rgba(0, 0, 0, 0.2);
}

.v-row {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
}
.v-column {
  display: flex;
  flex-direction: column;
}
.v-flex {
  flex: 1;
}
.v-line {
  border-bottom: solid #f3f3f3 1px;
}
.v-content {
  z-index: 9;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background-color: white;
  max-height: 60%;
  height: 60%;
  /* overflow: scroll; */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  transform: translate(0, 99%);
}
.v-price {
  flex: 1;
  justify-content: flex-end;
  margin: 32rpx 0;
  color: #878787;

  font-size: 24rpx;
  color: #f56105;
}
.v-new-price {
  font-size: 36rpx;
  font-weight: 500;
}
.v-old-price {
  font-size: 24rpx;
  color: #999999;
  padding-left: 16rpx;
  text-decoration: line-through;
}
.v-goods-code {
  color: #878787;
  font-size: 24rpx;
}

.v-close {
  width: 36rpx;
  height: 36rpx;
  margin-top: 32rpx;
  margin-right: 32rpx;
}
.v-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin: 32rpx 32rpx;
  background-color: #efefef;
}
.v-icon {
  width: 24rpx;
  height: 24rpx;
  margin-top: 4rpx;
}
.v-list {
  overflow: scroll;
  padding: 0 0 24rpx 32rpx;
}
.v-label {
  /* margin: 24rpx 0; */
  height: 96rpx;
  min-height: 96rpx;
  line-height: 96rpx;
  color: #232323;
  font-size: 36rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium;
}
.v-grid {
  flex-wrap: wrap;
}
.v-item {
  padding: 0 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #676767;
  position: relative;

  align-items: center;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 24rpx;
}
.v-unclick {
  opacity: 0.3;
}
.v-select {
  background-color: #f5f5f5;
}
.v-selected {
  background-color: #fef0e5;
}
.v-selected-str {
    color: #fe7100;
}
.v-status {
  border-radius: 4rpx;
  padding: 0 4rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: white;
  font-size: 22rpx;
  background-color: #fe7100;
}
.v-status2 {
  top: -16rpx;
  right: 0;
  position: absolute;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  background-color: #cacaca;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;

  line-height: 24rpx;
  font-size: 20rpx;
  color: white;
}
.v-actions {
  margin: 16rpx 32rpx;
  /* justify-content: space-between; */
  justify-content: center;
}
.v-ok {
  /* width: 330rpx; */
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #fe7100;

  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
}
.v-cancel {
  background-color: #ffb800;
}
