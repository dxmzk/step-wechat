.v-promotion {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Regular;
  background-color: rgba(0, 0, 0, 0.2);
}

.v-promotion .v-row {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
}
.v-promotion .v-column {
  display: flex;
  flex-direction: column;
}
.v-promotion .v-flex {
  flex: 1;
}
.v-promotion .v-line {
  border-bottom: solid #f3f3f3 1px;
}
.v-promotion .v-content {
  z-index: 9;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background-color: white;
  max-height: 60%;
  min-height: 60%;
  /* overflow: scroll; */
  /* padding-bottom: constant(safe-area-inset-bottom); */
  /* padding-bottom: env(safe-area-inset-bottom); */
  transform: translate(0, 99%);
}
.v-promotion .v-price {
  flex: 1;
  justify-content: flex-end;
  margin: 32rpx 0;
  color: #878787;

  font-size: 24rpx;
  color: #f56105;
}
.v-promotion .v-new-price {
  font-size: 36rpx;
  font-weight: 500;
}
.v-promotion .v-old-price {
  font-size: 24rpx;
  color: #999999;
  padding-left: 16rpx;
  text-decoration: line-through;
}
.v-promotion .v-goods-code {
  color: #878787;
  font-size: 24rpx;
}

.v-promotion .v-close {
  width: 36rpx;
  height: 36rpx;
  margin-top: 32rpx;
  margin-right: 32rpx;
}
.v-promotion .v-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin: 32rpx 32rpx;
  background-color: #efefef;
}
.v-promotion .v-icon {
  width: 24rpx;
  height: 24rpx;
  margin-top: 4rpx;
}
.v-promotion .v-list {
  flex: 1;
  overflow: scroll;
  padding: 0 0 48rpx 32rpx;
}
.v-promotion .v-empty {
  color: #999999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 48rpx;
  flex: 1;
}
.v-promotion .v-item {
  padding-right: 32rpx;
  height: 128rpx;
  min-height: 128rpx;
  font-size: 22rpx;
  color: #676767;
  justify-content: center;
  position: relative;
}
.v-promotion .v-status-type {
  border-radius: 4rpx;
  padding: 0 4rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: white;
  font-size: 22rpx;
  background-color: #fe7100;
}
.v-promotion .v-title {
  font-size: 28rpx;
  color: #232323;
  margin: 0 16rpx 0 16rpx;
}
.v-promotion .v-subtitle {
  /* margin-left: 75rpx; */
  font-size: 24rpx;
  color: #969696;
}
.v-promotion .v-sub-box {
  margin-top: 6rpx;
  margin-left: 72rpx; 
  margin-right: 100rpx;
}
.v-promotion .v-money {
  color: #f56105;
}
.v-promotion .v-goto-box {
  position: absolute;
  right: 24rpx;
}
.v-promotion .v-goto {
  color: #969696;
}
.v-promotion .v-actions {
  margin: 24rpx 32rpx;
  /* justify-content: space-between; */
  justify-content: center;
}
.v-promotion .v-ok {
  /* width: 330rpx; */
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #fe7100;

  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
}
.v-promotion .v-cancel {
  background-color: #ffb800;
}
