@import "./goods.skeleton.wxss";
.goods {
  position: relative;
  --top: 88px;
}
.empty {
  height: 55vh;
}
.top-fixed {
  top: var(--top);
  width: 100%;
  z-index: 1;
  position: fixed;
}
.fixed-height {
  height: 161rpx;
}
.search-box {
  z-index: 1;
  width: 100%;
  height: 80rpx;
  min-height: 80rpx;
  max-height: 80rpx;
  background-color: white;
}
.search-view {
  flex: 1;
  height: 72rpx;
  margin: 0 32rpx;
  padding: 0 8rpx 0 18rpx;
  border-radius: 8rpx;
  background-color: #efefef;
}
.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 24rpx;
}

.search-input {
  flex: 1;
  /* text-align: center; */
  color: #676767;
  font-size: 28rpx;
  line-height: 72rpx;
}
.promotion-box {
  height: 64rpx;
  max-height: 64rpx;
  padding: 0 32rpx;
  background-color: #FEF3D9;
}
.promotion-str {
  line-height: 34rpx;
  font-size: 24rpx;
  color: #BB7814;
}

.empty-str {
  color: #676767;
  font-size: 32rpx;
  line-height: 44rpx;
}
.empty-hint {
  color: #979797;
  font-size: 28rpx;
  line-height: 34rpx;
  margin-top: 8rpx;
  margin-bottom: 24rpx;
}
.empty-btn {
  line-height: 40rpx;
  padding: 20rpx 32rpx;
  margin: 0 12rpx;
  font-family: PingFangSC-Medium;
  color: #fe7100;
  text-align: center;
  font-weight: 500;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: solid 1px #FFB880;
}
