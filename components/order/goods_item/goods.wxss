.v-order-goods {
  display: flex;
  flex-direction: row;
  padding: 24rpx 0 16rpx 0;
}

.v-order-goods .v-row {
  display: flex;
  flex-direction: row;
}

.v-order-goods .v-column {
  display: flex;
  flex-direction: column;
}
.v-order-goods .v-flex {
  flex: 1;
}

.v-order-goods .v-goods-much {
  flex: 1;
  height: 160rpx;
  position: relative;
}
.v-order-goods .v-imgs-box {
  max-width: 530rpx;
  overflow: scroll;
}
.v-order-goods .v-goods-img {
  width: 160rpx;
  min-width: 160rpx;
  height: 160rpx;
  margin-right: 12rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}
.v-order-goods .v-goods-num {
  width: 180rpx;
  min-width: 180rpx;
  height: 160rpx;
  line-height: 160rpx;
  position: absolute;
  z-index: 1;
  top: 24rpx;
  right: 0;
  text-align: center;
  color: #676767;
  font-size: 24rpx;
  background-color: white;
}
.v-order-goods .v-title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  line-height: 40rpx;
}
.v-order-goods .v-type {
  font-size: 24rpx;
  color: #979797;
  line-height: 34rpx;
}
.v-order-goods .v-ellips {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.v-order-goods .v-ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
}
.v-order-goods .v-tag {
  height: 36rpx;
  padding: 0 8rpx;
  border-radius: 4rpx;
  border: 0.5px solid rgba(254,212,178,1);

  line-height: 36rpx;
  font-size: 22rpx;
  color: #FE7100;
}
.v-order-goods .v-alert {
  font-size: 24rpx;
  color: #F56105;
  line-height: 34rpx;
}
.v-order-goods .v-pc-box {
  min-width: 80rpx;
  align-items: flex-end;
  margin-right: 32rpx;
  margin-left: 16rpx;
}
.v-order-goods .v-price {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}
.v-order-goods .v-unit {
  font-size: 22rpx;
}
.v-order-goods .v-count {
  font-size: 24rpx;
  color: #979797;
}