
.v-content-input {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  background-color: #f6f6f6;
}
.v-content-input .v-input-box {
  padding: 24rpx 24rpx 0 24rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
}
.v-content-input .v-input {
  width: 100%;
  height: 200rpx;
}
.v-content-input .v-count {
  color: #979797;
  font-size: 28rpx;
  text-align: right;
  margin-bottom: 24rpx;
  margin-right: 24rpx;
}