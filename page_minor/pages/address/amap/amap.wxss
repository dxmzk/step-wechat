.amap {
  flex: 1;
}
.search-box {
  z-index: 1;
  height: 88rpx;
  min-height: 88rpx;
  padding: 0 32rpx;
  align-items: center;
  background-color: white;
}
.icon {
  width: 28rpx;
  height: 28rpx;
  margin: 0 8rpx;
}
.input {
  background: #f2f2f2;
  border-radius: 8rpx;
  height: 64rpx;
  padding: 0 16rpx;
  margin-left: 16rpx;
  align-items: center;
}
.amap-box {
  width: 100%;
  min-height: 560rpx;
  position: relative;
}
.amap-view {
  width: 100%;
  height: 95vh;
}
.ads-list {
  flex: 1;
  padding-bottom: 44rpx;
  overflow-y: scroll;
  background-color: white;
}
.location-ic {
  z-index: 3;
  right: 32rpx;
  bottom: 80rpx;
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: white;
}
.item {
  max-width: 100%;
  align-items: center;
  margin-left: 32rpx;
  padding: 24rpx 32rpx 24rpx 0;
  overflow: hidden;
  border-bottom: solid 1px #f5f5f5;
}
.address-ic {
  width: 32rpx;
  height: 32rpx;
  min-width: 32rpx;
  margin-right: 24rpx;
}
.address-name {
  font-size: 30rpx;
  color: #323232;
  /* max-width: 640rpx; */
}
.address-info {
  font-size: 24rpx;
  color: #979797;
  margin-top: 8rpx;
  /* max-width: 640rpx; */
}
.org-color {
  color: #f56105;
}
